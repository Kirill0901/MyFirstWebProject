<div class="container">
  <h2><% t('header.log_in') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <label><%= t('email') %></label><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleInputEmail1", ariaDescribedby: "emailHelp", placeholder: t('enter_email') %>
    </div><br />

    <div class="field form-group">
      <label><%= t('password') %></label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "exampleInputPassword1", placeholder: t('enter_password') %>
    </div><br />

    <% if devise_mapping.rememberable? %>
      <div class="field form-group form-check">
        <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1" %>
        <label><%= t('remember') %></label>
      </div>
    <% end %><br />

    <div class="actions">
      <%= f.submit t('header.log_in'), class: "btn btn-outline-dark me-2" %>
    </div><br />
  <% end %>
</div>
