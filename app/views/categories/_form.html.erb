<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(category.errors.count, "error") + ' ' + t('not_saved') %></h2>

        <ul>
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="field">
    <label><%= t('new_category.name') %></label>
    <%= form.text_field :name, class: "form-control", id: "exampleFormControlInput1", placeholder: t('new_category.enter_name') %>
  </div><br />

  <%= form.submit t('add'), :class => 'btn btn-outline-dark me-2' %>
  <%= link_to t('cancel'), categories_path(locale: I18n.locale), class: 'btn btn-outline-dark me-2' %>
<% end %>
